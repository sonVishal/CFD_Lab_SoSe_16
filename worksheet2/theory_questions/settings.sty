\newcommand{\SetStandardHeader}{
	\fancyhead[RE,LO]{}
	\fancyhead[RO,LE]{Section \thesection}
}

\newcommand{\SetStandardFoot}{
	\fancyfoot[RE,LO]{{Version \version}}
	\fancyfoot[C]{\thepage}
	\fancyfoot[RO,LE]{{} }
}

\newcommand{\SetCustomHeader}[3]{
	\fancyhead[RE,LO]{#1}
	\fancyhead[C]{#2}
	\fancyhead[RO,LE]{#3}
}

\newcommand{\SetCustomFoot}[3]{
	\fancyfoot[RE,LO]{#1}
	\fancyfoot[C]{#2}
	\fancyfoot[RO,LE]{#3}
}


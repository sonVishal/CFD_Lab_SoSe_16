\newcommand\tablabel[1]{\hypertarget{htab:#1}{\label{tab:#1}}}
\newcommand\seclabel[1]{\hypertarget{hsec:#1}{\label{sec:#1}}}
\newcommand\subseclabel[1]{\hypertarget{hsubsec:#1}{\label{subsec:#1}}}
\newcommand\subsubseclabel[1]{\hypertarget{hsubsubsec:#1}{\label{subsubsec:#1}}}
\newcommand\eqlabel[1]{\hypertarget{heq:#1}{\label{eq:#1}}}
\newcommand\figlabel[1]{\hypertarget{hfig:#1}{\label{fig:#1}}}
\newcommand\chaplabel[1]{\hypertarget{hchap:#1}{\label{chap:#1}}}

\newcommand{\figref}[1]{{Figure \ref{fig:#1}}}
\newcommand{\tabref}[1]{Table \ref{tab:#1}}
\newcommand{\secref}[1]{Section \ref{sec:#1}}
\newcommand{\subsecref}[1]{Subsection \ref{subsec:#1}}
\newcommand{\subsubsecref}[1]{Subsubsection \ref{subsubsec:#1}}
\newcommand{\equref}[1]{Eq. \ref{eq:#1}}
\newcommand{\chapref}[1]{Chapter \ref{chap:#1}}
\newcommand{\mysection}[2]{\section{#1}\label{sec:#2}}

%-----------------%
% Figure commands %
%-----------------%

\newcommand{\autofigure}[5]{
	\begin{figure}[!ht]%[!ht]
		\begin{center}
			\resizebox{#3\textwidth}{!}{\rotatebox{#4}{\includegraphics{#1}}}
			\caption{#2}
			\figlabel{#5}
		\end{center}
	\end{figure}
}


\newcommand{\myfigt}[6]{
	\begin{figure}[h]% [t]
		\begin{center}
			\subfloat[#3]
			{\resizebox{0.45\textwidth}{!}{\includegraphics{#1}}}
			\subfloat[#4]
			{\resizebox{0.45\textwidth}{!}{\includegraphics{#2}}}
		\end{center}
		\caption{#5}
		\figlabel{#6}
	\end{figure}
}

